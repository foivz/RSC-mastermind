<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.test.RegisterActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblEmail"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="@string/register_lbl_email" />

            <EditText
                android:id="@+id/profile_txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="textEmailAddress" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblPassword"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="2.42"
                android:text="@string/register_lbl_password" />

            <EditText
                android:id="@+id/profile_txtPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lbiPassword2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/register_lbl_repeatePassword" />

            <EditText
                android:id="@+id/profile_txtPassword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblFirstName"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.18"
                android:text="@string/register_lbl_firstName" />

            <EditText
                android:id="@+id/profile_txtFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblLastName"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/register_lbl_lastName" />

            <EditText
                android:id="@+id/profile_txtLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblcCty"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="2.62"
                android:text="@string/register_city" />

            <EditText
                android:id="@+id/profile_txtCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblPhone"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.77"
                android:text="@string/register_phone" />

            <EditText
                android:id="@+id/profile_txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="phone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblYear"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:text="@string/register_year" />

            <EditText
                android:id="@+id/profile_txtYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblWeight"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.55"
                android:text="@string/register_weight" />

            <EditText
                android:id="@+id/profile_intWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblBloodType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="@string/register_blood_type" />

            <Spinner
                android:id="@+id/profile_spnBloodType"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/login_lblResetPassword"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="@string/regsiter_sex" />

            <Spinner
                android:id="@+id/profile_spnSex"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <Button
                android:id="@+id/profile_btnUpdate"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/profile_update" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>