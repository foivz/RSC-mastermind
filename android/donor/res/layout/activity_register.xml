<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:clipToPadding="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hr.mastermind.donor.RegisterActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/register_lbl_email"
                android:width="50dp" />

            <EditText
                android:id="@+id/register_txtEmail"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/register_lbl_firstName"
                android:width="50dp" />

            <EditText
                android:id="@+id/register_txtFirstName"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.07"
                android:text="@string/register_lbl_lastName" />

            <EditText
                android:id="@+id/register_txtLastName"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4.46"
                android:text="@string/register_lbl_password" />

            <EditText
                android:id="@+id/register_txtPassword"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lbiPassword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5.11"
                android:text="@string/register_lbl_repeatePassword" />

            <EditText
                android:id="@+id/register_txtPassword2"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:text="@string/register_phone" />

            <EditText
                android:id="@+id/register_txtPhone"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="phone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.11"
                android:text="@string/register_weight" />

            <EditText
                android:id="@+id/register_intWeight"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblcCty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.17"
                android:text="@string/register_city" />

            <EditText
                android:id="@+id/register_txtCity"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:text="@string/register_year" />

            <EditText
                android:id="@+id/register_txtYear"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="text" >
                
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/register_lblBloodType"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:text="@string/register_blood_type" />

            <Spinner
                android:id="@+id/register_spnBloodType"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/login_lblResetPassword"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:text="@string/regsiter_sex" />

            <Spinner
                android:id="@+id/register_spnSex"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <Button
                android:id="@+id/register_btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:text="@string/register_register" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>